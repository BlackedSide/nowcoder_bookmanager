<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fannyuan.bookmanager.dao.UserOrderDao">
    <resultMap id="orderResultMap" type="UserOrder">
        <result property="id" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="bookId" column="book_id"/>
        <result property="createTime" column="order_createtime"/>
        <result property="expiredTime" column="order_expiredtime"/>
    </resultMap>

    <insert id="addOrder" parameterType="UserOrder">
        insert
        into user_order
            (user_id, book_id, order_createtime, order_expiredtime)
        values (#{userId}, #{bookId}, #{createTime}, #{expiredTime})
    </insert>

    <select id="selectOrders" parameterType="int" resultType="UserOrder" resultMap="orderResultMap">
        select order_id,
               user_id,
               book_id,
               order_createtime,
               order_expiredtime
        from user_order
        where user_id = #{uid}
    </select>

    <select id="getOrderById" parameterType="int" resultType="UserOrder" resultMap="orderResultMap">
        select order_id,
               user_id,
               book_id,
               order_createtime,
               order_expiredtime
        from user_order
        where order_id = #{id}
    </select>

    <delete id="deleteOrder" parameterType="int">
        delete
        from user_order
        where order_id = #{id}
    </delete>
</mapper>