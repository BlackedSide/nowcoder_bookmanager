<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fannyuan.bookmanager.dao.AdminDao">
    <resultMap id="adminResultMap" type="Admin">
        <result property="authority" column="admin_authority"/>
        <result property="createTime" column="admin_createtime"/>
        <result property="updateTime" column="admin_updatetime"/>
    </resultMap>

    <select id="selectByUid" parameterType="int" resultType="Admin" resultMap="adminResultMap">
        select admin_authority,
               admin_createtime,
               admin_updatetime
        from user_admin
        where user_id = #{uid}
    </select>
</mapper>